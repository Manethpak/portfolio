---
import { cn } from "../../helper/cn";

interface Props {
  className?: string;
  rowSpan?: string;
  colSpan?: string;
}

const { className, rowSpan, colSpan } = Astro.props;
---

<article
  class={cn(
    "card",
    "row-span-1 rounded-xl p-4 border-white/20 bg-neutral-800 border font-thin flex transition duration-200 hover:shadow-lg hover:shadow-white/40 hover:border-white/40",
    className,
    rowSpan,
    colSpan
  )}
>
  <slot />
</article>
