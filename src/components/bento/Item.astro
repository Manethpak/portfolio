---
import { cn } from "../../helper/cn";

interface Props {
  className?: string;
  rowSpan?: string;
  colSpan?: string;
}

const { className, rowSpan, colSpan } = Astro.props;
---

<article
  class={cn(
    "card",
    "p-4 border-primary-border border-2 flex transition duration-200 min-h-[6rem]",
    className,
    rowSpan,
    colSpan
  )}
>
  <slot />
</article>
