---
import { Image } from "astro:assets";
import GridItem from "../bento/Item.astro";
import ProfileImg from "/src/assets/profile.jpg";
import { GithubIcon, LinkedinIcon } from "astro-feather";

const { colSpan } = Astro.props;

const socials = [
  {
    href: "https://www.linkedin.com/in/maneth-pak",
    icon: LinkedinIcon,
  },
  {
    href: "https://github.com/manethpak",
    icon: GithubIcon,
  },
];
---

<GridItem className="justify-between gap-6 flex-col" colSpan={colSpan}>
  <div class="flex flex-col gap-6 justify-between">
    <div>
      <h1 class="text-2xl font-normal mb-3 font-serif">Hey this is, Maneth</h1>
      <div class="flex flex-col sm:flex-row">
        <div class="space-y-2">
          <p>
            I build software that solves real problems. Currently focused on
            creating products that improve how people work and live.
          </p>
          <p>
            When I'm not coding, I'm usually tinkering with new tech, working on
            side projects, or exploring different cultures and cuisines.
          </p>
        </div>
        <Image
          src="/icon-light-transparent.png"
          alt="Maneth"
          width={120}
          height={120}
          class="aspect-auto h-fit self-end sm:self-center dark:hidden"
        />
        <Image
          src="/icon-dark-transparent.png"
          alt="Maneth"
          width={120}
          height={120}
          class="aspect-auto h-fit self-end sm:self-center hidden dark:block"
        />
      </div>
    </div>

    <div class="flex gap-6 mt-2 items-center">
      {
        socials.map(({ href, icon: Icon }) => (
          <a
            href={href}
            target="_blank"
            class="text-secondary-text hover:text-primary-text transition-colors"
          >
            <Icon size={24} />
          </a>
        ))
      }
      <a href="mailto:manethpak.dev@gmail.com"> manethpak.dev@gmail.com </a>
    </div>
  </div>
</GridItem>
