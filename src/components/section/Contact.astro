---
import { MailIcon, PhoneIcon } from "astro-feather";
import GridItem from "../bento/Item.astro";
---

<script>
  document.querySelectorAll(".copy-btn").forEach((btn) => {
    btn.addEventListener("click", () => {
      const text = btn.textContent;

      navigator.clipboard.writeText(text);
      btn.textContent = "Copied!";
      setTimeout(() => {
        btn.textContent = text;
      }, 1500);
    });
  });
</script>

<GridItem className="p-4">
  <div class="flex flex-col gap-2 transition-all">
    <h2 class="text-xl font-bold">Contact</h2>

    <div class="flex items-center gap-1">
      <MailIcon size={16} />
      <button class="hover:underline copy-btn">manethpak.dev@gmail.com</button>
    </div>
    <div class="flex items-center gap-1">
      <PhoneIcon size={16} />
      <button class="hover:underline copy-btn">+855 93442385</button>
    </div>
  </div>
</GridItem>
