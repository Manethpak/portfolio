---
import GridItem from "../bento/Item.astro";

const { colSpan } = Astro.props;
---

<style>
  .role-title {
    @apply text-lg font-normal;
  }
  .role-company {
    @apply text-base text-tertiary-text font-normal font-sans;
  }
  .role-date {
    @apply text-sm text-muted-text;
  }
  .role-description {
    @apply text-base mt-1 text-secondary-text;
  }
</style>

<GridItem className="p-4 flex flex-col justify-between" colSpan={colSpan}>
  <div>
    <h2 class="mb-3">Current Role</h2>
    <div>
      <div class="role-title">Senior Full-Stack Developer</div>
      <div class="role-company">
        <a
          href="https://wingbank.com.kh"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:underline"
        >
          WING Bank (Cambodia) Plc
        </a>
      </div>
      <div class="role-date">Sep 2025 - Present</div>
      <p class="role-description">
        Developer working within an Innovation team, researching and building
        AI-integrated systems and platforms that meet the security, compliance,
        and reliability requirements of regulated financial institutions.
      </p>
      <div class="mt-3">
        <a href="/experience" class="text-sm">View full work history â†’</a>
      </div>
    </div>
  </div>
</GridItem>
