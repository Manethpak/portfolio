---
import type { HTMLTag } from "astro/types";
interface Props {
  el?: HTMLTag;
  className?: string;
}

import { cn } from "@/helper/cn";

const { el: Tag = "div", className, ...props } = Astro.props;
---

<Tag
  class={cn(
    "bg-gradient-to-br from-neutral-600/20 to-gray-500/20 rounded-lg border border-white/10 hover:border-neutral-500/80 transition-all p-4 gap-2 hover:-translate-y-1",
    className
  )}
  {...props}
>
  <slot />
</Tag>
