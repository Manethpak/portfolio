---
import { IconChevronLeft } from "@tabler/icons-react";
import Link from "../components/util/Link.astro";
import Layout from "./Layout.astro";

export interface Props {
  title: string;
  desc: string;
}
---

<Layout {...Astro.props}>
  <Link
    href="/"
    class="flex items-center no-underline w-fit px-4 py-2 rounded-xl border-white/20 bg-neutral-800 border transition duration-200 hover:border-white/40"
  >
    <IconChevronLeft size={18} />
    <span> Back </span>
  </Link>
  <slot />
</Layout>
