---
import { ArrowLeftIcon } from "astro-feather";
import Layout from "../layouts/Layout.astro";
import Button from "../components/util/Button.astro";
---

<Layout title="Page not found" desc="Page not found">
  <div class="flex items-center justify-center px-6 py-24">
    <div class="text-center">
      {/* 404 Text */}
      <h1 class="text-9xl font-extrabold tracking-widest animate-pulse">404</h1>

      {/* Space illustration */}
      <div class="relative">
        <div
          class="w-24 h-24 bg-gradient-to-br from-purple-600 to-indigo-600 rounded-full mx-auto my-8 animate-bounce shadow-xl"
        >
          <div
            class="absolute inset-0 rounded-full bg-white opacity-30 blur-xl"
          >
          </div>
        </div>

        {/* Decorative stars */}
        <div
          class="absolute top-0 left-1/4 w-2 h-2 bg-white rounded-full animate-pulse"
        >
        </div>
        <div
          class="absolute top-1/3 right-1/4 w-2 h-2 bg-white rounded-full animate-pulse delay-100"
        >
        </div>
        <div
          class="absolute bottom-0 left-1/3 w-2 h-2 bg-white rounded-full animate-pulse delay-200"
        >
        </div>
      </div>

      {/* Error message */}
      <h2 class="mb-8 text-2xl font-medium text-white/75">
        Oops! Looks like the page you're looking doesn't exist
      </h2>

      <div class="flex justify-center gap-4">
        <Button onclick="window.history.back()">
          <ArrowLeftIcon customClasses="mr-2" size={20} />
          Go Back
        </Button>

        <Button onclick="window.location.href = '/'"> Return Home </Button>
      </div>
    </div>
  </div>
</Layout>
